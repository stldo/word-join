{
  "env": {
    "es2021": true
  },
  "ignorePatterns": [
    "dist"
  ],
  "extends": [
    "standard"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "max-len": [2, { "code": 80 }]
  }
}
